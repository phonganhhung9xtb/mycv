{
    "compilerOptions": {
        "experimentalDecorators": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@c/*": [
                "./src/components/*"
            ],
            "@t/*": [
                "./src/containers/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}